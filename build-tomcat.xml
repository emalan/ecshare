  Import file to get deploy functionality.
  You will need to setup a deployer.properties with the folowing value pairs
  webapp, path, url, username, password
-->
<project name="Deployer" basedir=".">

  <!-- File that has the deploy properties.  Set this property before calling any deplaoyer targets.
       webapp, path, url, username, password -->
  <property file="${deploy.properties.file}" />
  
  <property name="webapp.path" value="${build.dir}"/>

  <path id="deployer.classpath">
    <fileset dir="${share.dir}/deployer">
      <include name="*.jar"/>
    </fileset>
  </path>

  <!-- Configure the custom Ant tasks for the Manager application -->
  <taskdef resource="org/apache/catalina/ant/catalina.tasks"
           classpathref="deployer.classpath"/>
           
  <target name="undeployDeploy" if="deploy.properties.file">
  	  <echo message="Deploy property file is set to : ${deploy.properties.file}"></echo>
      <antcall target="stop"></antcall>
  	  <antcall target="undeploy"></antcall>
      <antcall target="deploy"></antcall>
  </target>         

  <target name="deploy">
  	
    <deploy url="${url}" username="${username}" password="${password}"
            path="${path}" war="${build.dir}/${war.name}.war" update="true" />
  </target>
	

  <target name="undeploy">
    <undeploy url="${url}" username="${username}" password="${password}"
              path="${path}" failOnError="false" />
  </target>

  <!-- Webapp lifecycle control -->
  <target name="start">
    <start url="${url}" username="${username}" password="${password}"
           path="${path}"/>
  </target>
  <target name="reload">
    <reload url="${url}" username="${username}" password="${password}"
            path="${path}" />
  </target>
  <target name="stop">
    <stop url="${url}" username="${username}" password="${password}"
          path="${path}" failOnError="false" />
  </target>

</project>
