<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
    http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<!-- Content service setup -->
	<bean id="contentService" class="com.madalla.service.cms.ContentServiceImpl">
    	<property name="template" ref="jcrTemplate"/>
    	<property name="site" value="${site.code}"/>
    	<property name="locales" ref="siteLocales"/>
	</bean>
	
	<bean id="contentAdminService" class="com.madalla.service.cms.ContentAdminService">
    	<property name="template" ref="jcrTemplate"/>
    	<property name="site" value="${site.code}"/>
    	<property name="repositoryHome" value="${repository.home}"/>
	</bean>

</beans>



